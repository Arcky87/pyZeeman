{
  "data_dir": "/data/Observations/test_pyzeeman/",
  "device": "zeeman",
  "gain": 2.78,
  "ron": 5.6,
  "s_bias_name": "s_bias.fits",
  "s_flat_name": "s_flat.fits",
  "atlas_file": "thar.dat",
  "reference_order": 11,
  "poly_degree": 4,
  "n_orders": 14,
  "upper_orders": [1, 2, 3, 4, 5, 6, 7],
  "lower_orders": [8, 9, 10, 11, 12, 13, 14],
  
  "preprocessing": {
    "trim_area": [0, 625, 0, 4600],
    "flip": false,
    "cosmic_ray_removal": true,
    "cosmic_ray_params": {
      "sigclip": 4.5,
      "sigfrac": 0.3,
      "objlim": 5.0,
      "niter": 4
    },
    "scatter_light": {
      "enabled": false,
      "border_width": 75,
      "save_background": true
    }
  },
  
  "tracing": {
    "n_points_for_fit": 10,
    "smooth": true,
    "smooth_sigma": 1.0,
    "getxwd_gauss": false,
    "visualization": {
      "show_point_fits": false,
      "show_final_traces": false,
      "save_plots": true
    },
    "overwrite": true,
    "save_format": "json"
  },
  
  "calibration": {
    "peak_detection": {
      "prominence_sigma": 15.0,
      "width_range": [1.8, 3.5],
      "distance_pixels": 10
    },
    "matching": {
      "wavelength_tolerance": 0.5,
      "max_shift_pixels": 3.0
    },
    "quality_thresholds": {
      "rms_excellent": 0.03,
      "rms_good": 0.09,
      "rms_warning": 0.25
    },
    "visualization": {
      "save_plots": true,
      "output_format": "png",
      "dpi": 150
    }
  }
}
